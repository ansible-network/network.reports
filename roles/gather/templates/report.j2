<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Network Automation Report</title>
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function(){
            $(".tab-content").hide();
            $("#interfaces").show();

            $(".tab-button").click(function(){
                $(".tab-content").hide();
                $("#" + $(this).attr("data-target")).show();
                $(".tab-button").removeClass("active");
                $(this).addClass("active");
            });

            // PDF Download
            $("#download-pdf").click(function() {
                window.open('network_report.pdf');
            });
        });
    </script>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Devices</h2>
        <ul>
            <li>{{ inventory_hostname }}</li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h1>Network Report</h1>

        <!-- PDF Download Button -->
        <button id="download-pdf" class="pdf-button">Download PDF Report</button>

        <!-- Tabs -->
        <div class="tabs">
            <button class="tab-button active" data-target="interfaces">Interfaces</button>
            <button class="tab-button" data-target="l2_interfaces">L2 Interfaces</button>
            <button class="tab-button" data-target="l3_interfaces">L3 Interfaces</button>
            <button class="tab-button" data-target="ospfv2">OSPFv2</button>
            <button class="tab-button" data-target="bgp_global">BGP Global</button>
            <button class="tab-button" data-target="bgp_address_family">BGP Address Family</button>
        </div>

        <!-- Interfaces Tab -->
        <div id="interfaces" class="tab-content">
            <h2>Interfaces</h2>
            <table>
                <thead>
                    <tr>
                        <th>Interface Name</th>
                        <th>Status</th>
                        <th>Speed</th>
                        <th>Duplex</th>
                    </tr>
                </thead>
                <tbody>
                    {% for interface in all_gathered_facts.interfaces %}
                    <tr>
                        <td>{{ interface.name }}</td>
                        <td class="{% if interface.enabled %}enabled{% else %}disabled{% endif %}">
                            {{ "Enabled" if interface.enabled else "Disabled" }}
                        </td>
                        <td>{{ interface.speed | default('N/A') }}</td>
                        <td>{{ interface.duplex | default('N/A') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- BGP Global Tab -->
        <div id="bgp_global" class="tab-content">
            <h2>BGP Global</h2>
            {% if all_gathered_facts.bgp_global %}
            <table>
                <thead>
                    <tr>
                        <th>AS Number</th>
                        <th>IPv4 Unicast</th>
                        <th>Log Neighbor Changes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ all_gathered_facts.bgp_global.as_number }}</td>
                        <td>{{ all_gathered_facts.bgp_global.bgp.default.ipv4_unicast | default('N/A') }}</td>
                        <td>{{ all_gathered_facts.bgp_global.bgp.log_neighbor_changes | default('N/A') }}</td>
                    </tr>
                </tbody>
            </table>

            <h3>BGP Neighbors</h3>
            {% if all_gathered_facts.bgp_global.neighbors %}
            <table>
                <thead>
                    <tr>
                        <th>Neighbor Address</th>
                        <th>Remote AS</th>
                        <th>Update Source</th>
                    </tr>
                </thead>
                <tbody>
                    {% for neighbor in all_gathered_facts.bgp_global.neighbors %}
                    <tr>
                        <td>{{ neighbor.neighbor_address }}</td>
                        <td>{{ neighbor.remote_as }}</td>
                        <td>{{ neighbor.update_source | default('N/A') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
            <p>No BGP Neighbors found.</p>
            {% endif %}

            <h3>Advertised Networks</h3>
            {% if all_gathered_facts.bgp_global.networks %}
            <table>
                <thead>
                    <tr>
                        <th>Network Address</th>
                    </tr>
                </thead>
                <tbody>
                    {% for network in all_gathered_facts.bgp_global.networks %}
                    <tr>
                        <td>{{ network.address }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% else %}
            <p>No advertised networks found.</p>
            {% endif %}

            {% else %}
            <p>No BGP Global data available.</p>
            {% endif %}
        </div>

        <!-- BGP Address Family Tab -->
        <div id="bgp_address_family" class="tab-content">
            <h2>BGP Address Family</h2>
            {% if all_gathered_facts.bgp_address_family %}
            <table>
                <thead>
                    <tr>
                        <th>AS Number</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ all_gathered_facts.bgp_address_family.as_number }}</td>
                    </tr>
                </tbody>
            </table>
            {% else %}
            <p>No BGP Address Family data available.</p>
            {% endif %}
        </div>

    </div>

</body>
</html>
